<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kunal.project.calendar_task_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CalendarTaskApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calendar_Task_App"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.MainActivity"
            android:exported="true" />
        <activity
            android:name=".views.TaskListActivity"
            android:exported="true" />
        <activity
            android:name=".views.AddTaskActivity"
            android:exported="true" />
        <activity
            android:name=".views.LaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>